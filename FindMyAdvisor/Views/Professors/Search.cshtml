@model FindMyAdvisor.ViewModels.ProfessorFormViewModel
@{
    ViewBag.Title = "Search";
}

@using (Html.BeginForm("Index", "Professors"))
{
    <div class="container" style="margin-top:75px;">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 well well-lg" style="background-color: rgba(245,245,245,.8)">
                <h1>Lets start searching</h1>
                <div class="form-group row" style="margin-top:15px;">
                    @Html.LabelFor(m => m.Professor.Name, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Professor.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.University.Name, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Professor.University.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Department.Name, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Professor.Department.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Research.Research_Interest, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Professor.Research.Research_Interest, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Rank</label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(m => m.Professor.RankId, new SelectList(Model.Ranks, "Id", "Name"), "Select a rank", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Join_Date, new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Join_Date, "{0:yyyy}", new { @class = "form-control" })
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Graduate From</label>
                    <div class="col-sm-9 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.GraduateFrom.Name, new { @class = "form-control" })
                    </div>
                </div>
                <button class="btn btn-primary">Find your advisor</button>
            </div>
        </div>
    </div>
}
