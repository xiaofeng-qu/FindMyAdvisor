@model FindMyAdvisor.ViewModels.ProfessorEditFormViewModel
@{
    var action = ViewContext.RouteData.Values["action"];
    ViewBag.Title = action;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Professors"))
{
    <div class="container" style="margin-top:50px;">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 well well-lg" style="background-color: rgba(245,245,245,.8)">
                @Html.ValidationSummary()
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Professor.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.University.Name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Professor.University.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Department.Name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Professor.Department.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Research.Research_Interest, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Professor.Research.Research_Interest, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Rank</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Professor.RankId, new SelectList(Model.Ranks, "Id", "Name"), "Select a rank", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Professor.Join_Date, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Join_Date, "{0:yyyy}", new { @class = "form-control" })
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Bachelor's University</label>
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Bachelor.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Master's University</label>
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Master.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">PhD's University</label>
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.PhD.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Homepage</label>
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Homepage, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Photo Link</label>
                    <div class="col-sm-8 col-form-label">
                        @Html.TextBoxFor(m => m.Professor.Photo_Link, new { @class = "form-control" })
                    </div>
                </div>
                @if (action.ToString() == "Create")
                {
                @Html.HiddenFor(m => m.Professor.Id, new { @Value = 0 })
                }
                else
                {
                @Html.HiddenFor(m => m.Professor.Id, new { @Value = Model.Professor.Id })
                }
                <button class="btn orange">Save</button>
            </div>
        </div>
    </div>
}
